{
  "manifest_version": 2,

  "name": "Keplr",
  "description": "Keplr is a browser extension wallet for the Inter blockchain ecosystem.",
  "version": "0.12.116",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Keplr"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "storage",
    "notifications",
    "identity",
    "idle",
    "alarms",
    "unlimitedStorage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "contentScripts.bundle.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injectedScript.bundle.js"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/Inter-SemiBold.ttf"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/icon-48.png"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/double-arrow-left.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
